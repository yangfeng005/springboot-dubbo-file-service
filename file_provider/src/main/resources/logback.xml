<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
	<!--输出到控制台 ConsoleAppender-->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!--展示格式 layout-->
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d -1 %msg%n</pattern>
		</layout>
	</appender>

	<!-- 文件保存日志的相关配置 -->
	<appender name="FILE_INFO" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<!-- 保存日志文件的路径 -->
		<file>/opt/web-app/logs/zpzc.log</file>
		<!-- 日志格式 -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%class:%line] - %m%n</pattern>
		</encoder>
		<!-- 循环政策：基于时间创建日志文件 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 日志文件名格式 -->
			<fileNamePattern>/opt/web-app/logs/daily_log/zpzc-%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- 最大保存时间：30天-->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
	</appender>
	<appender name="FILE_ERROR" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<!-- 保存日志文件的路径 -->
		<file>/opt/web-app/logs/zpzc_error.log</file>
		<!-- 日志格式 -->
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} [%class:%line] - %m%n</pattern>
		</encoder>
		<!-- 循环政策：基于时间创建日志文件 -->
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- 日志文件名格式 -->
			<fileNamePattern>/opt/web-app/logs/daily_log/zpzc_error-%d{yyyy-MM-dd}.log</fileNamePattern>
			<!-- 最大保存时间：30天-->
			<maxHistory>30</maxHistory>
		</rollingPolicy>
	</appender>

	<!-- 基于INFO处理日志：具体控制台或者文件对日志级别的处理还要看所在appender配置的filter，如果没有配置filter，则使用root配置 -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE_INFO" />
		<appender-ref ref="FILE_ERROR" />
	</root>
</configuration>